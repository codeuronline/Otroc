{% extends "base.html.twig" %}
{% block pagetitle %}Accueil
{% endblock %}


{% block header %}
	<navbar>
		<a class="nav" href="">LOGO</a>
		<span>SLOGAN</span>
		<a class="nav" href="ajout">AJOUT</a>
	</navbar>
{% endblock %}
{% block recherche %}
{% set Nbannonce =1 %}
{% for annonce as annonces %}
	{% set Nbannonce = Nbannonce +1 %}

{% endfor %}
	<div class="recherche">
		<h1> Nombre d'annonces enregistrées:{{ Nbannonce }}</h1>
	</div>
{% endblock %}

{% block body %}
<div class="container">
	{% set compteur=1 %}
	
<a href="show">
{% for annonce as annonces %}
	<div class="card{{loop.index}}">
		<img class="vignette" src="public/img/{{ annonce.image1 ?  annonce.image1: 'vide.jpg'}}" alt="image{{loop.index}}" width="150px">
		<h1>{{ loop.index}}.{{ annonce.titre }}</h1>
		<h2>{{ annonce.prix }}€</h2>
		{% set compteur = compteur+1 %}
	</div>
</a>{% endfor %}</div>


{% endblock %}
{% block footer %}
	<footer></footer>
{% endblock %}
{% block script %}{% endblock %}

